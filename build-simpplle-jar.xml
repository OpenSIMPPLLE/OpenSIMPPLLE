<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="BuildSimpplleJar" basedir="." default="simpplle">
	<target name="simpplle" description="Create the JAR file for SIMPPLLE classes and resources">

    <jar destfile="lib/SIMPPLLE.jar"
   	  update="false"
      compress="false">
       <fileset
        dir="classes"
        includes="**/*.class, **/*.xml, **/*.gif, **/*.jpg">
      </fileset>
      <zipgroupfileset dir="lib" includes="hibernate/*.jar, apache/*.jar, XStream/*.jar"/>
      <fileset
        dir="lib"
        includes="**/*.class, log4j.properties">
       </fileset> 
       <manifest>
       		<attribute name="Main-Class" value="simpplle/JSimpplle" />
       </manifest>
    </jar>
    
  </target>

</project>

